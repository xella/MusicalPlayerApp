<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.musicplayerapp.AlbumsActivity"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.example.android.musicplayerapp.SquareImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover6" />

                    <TextView
                        style="@style/AlbumCardAlbumName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tu Veneno" />

                    <TextView
                        style="@style/AlbumCardArtistName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Natalia Oreiro" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.android.musicplayerapp.SquareImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover2" />

                    <TextView
                        style="@style/AlbumCardAlbumName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="21" />

                    <TextView
                        style="@style/AlbumCardArtistName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Adele" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.example.android.musicplayerapp.SquareImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover3" />

                    <TextView
                        style="@style/AlbumCardAlbumName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Britney" />

                    <TextView
                        style="@style/AlbumCardArtistName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Britney Spears" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.android.musicplayerapp.SquareImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover4" />

                    <TextView
                        style="@style/AlbumCardAlbumName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Eterno Agosto" />

                    <TextView
                        style="@style/AlbumCardArtistName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alvaro Soler" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.android.musicplayerapp.SquareImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover5" />

                    <TextView
                        style="@style/AlbumCardAlbumName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Elegy for the Arctic" />

                    <TextView
                        style="@style/AlbumCardArtistName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ludovico Einaudi" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.android.musicplayerapp.SquareImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover6" />

                    <TextView
                        style="@style/AlbumCardAlbumName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tu Veneno" />

                    <TextView
                        style="@style/AlbumCardArtistName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Natalia Oreiro" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.android.musicplayerapp.SquareImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover7" />

                    <TextView
                        style="@style/AlbumCardAlbumName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Awake" />

                    <TextView
                        style="@style/AlbumCardArtistName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Skillet" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.android.musicplayerapp.SquareImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover4" />

                    <TextView
                        style="@style/AlbumCardAlbumName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Eterno Agosto" />

                    <TextView
                        style="@style/AlbumCardArtistName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alvaro Soler" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.android.musicplayerapp.SquareImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover2" />

                    <TextView
                        style="@style/AlbumCardAlbumName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="21" />

                    <TextView
                        style="@style/AlbumCardArtistName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Adele" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.android.musicplayerapp.SquareImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover5" />

                    <TextView
                        style="@style/AlbumCardAlbumName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Elegy for the Arctic" />

                    <TextView
                        style="@style/AlbumCardArtistName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ludovico Einaudi" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>

