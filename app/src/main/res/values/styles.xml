<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DividerView">
        <item name="android:background">@color/dividerColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>
    
    <style name="explanation">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/explanation_block_padding</item>
        <item name="android:layout_margin">@dimen/explanation_block_margin</item>
    </style>
    
    <style name="MenuListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/menu_list_item_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">?android:textAppearanceListItem</item>
    </style>

    <style name="CardViewGridStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/card_view_margin</item>
    </style>

    <style name="CardViewGridTitle">
        <item name="android:textSize">@dimen/card_view_title_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">@dimen/card_view_title_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/card_view_title_vertical_padding</item>
    </style>

    <style name="CardViewGridSubtitle">
        <item name="android:textSize">@dimen/card_view_subtitle_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CardViewGridInnerLayout">
        <item name="android:padding">@dimen/card_view_inner_layout_padding</item>
    </style>

    <style name="CardViewListStyle">
        <item name="android:layout_margin">@dimen/card_view_margin</item>
    </style>

    <style name="CardViewListTitle">
        <item name="android:textSize">@dimen/card_view_title_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">@dimen/card_view_title_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/card_view_title_vertical_padding</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="CardViewListSubtitle">
        <item name="android:textSize">@dimen/card_view_subtitle_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CardViewListSubtitle.Italic">
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <!-- Current Song Activity styles -->
    <style name="CurrentSongTitle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/current_song_title_size</item>
        <item name="android:layout_marginTop">@dimen/current_song_margin</item>
    </style>

    <style name="CurrentSongAlbumCoverImage">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginTop">@dimen/current_song_album_cover_margin</item>
    </style>

    <style name="CurrentSongPlayerControlButtons">
        <item name="android:layout_margin">@dimen/player_control_button_margin</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PlayerControlLayout">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/player_control_layout_margin</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="CurrentSongSongInfoLayout">
        <item name="android:padding">@dimen/current_song_info_padding</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="CurrentSongArtistName">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textSize">@dimen/current_song_subtitle_size</item>
    </style>

    <style name="CurrentSongAlbumTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/current_song_subtitle_size</item>
    </style>

    <style name="CurrentSongButtonsBlock">
        <item name="android:layout_margin">@dimen/current_song_buttons_block_margin</item>
    </style>

    <style name="CurrentSongButtonsBlockButton">
        <item name="android:layout_marginLeft">@dimen/current_song_buttons_block_button_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/current_song_buttons_block_button_vertical_margin</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/current_song_buttons_block_button_padding</item>
    </style>

    <!-- Payment Activity -->
    <style name="PaymentTotalPriceBlock">
        <item name="android:layout_margin">@dimen/payment_total_price_block_margin</item>
        <item name="android:padding">@dimen/payment_total_price_block_padding</item>
    </style>

    <style name="PaymentTotalPriceTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaymentButton">
        <item name="android:layout_marginLeft">@dimen/payment_button_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/payment_button_vertical_margin</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
