<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DividerView">
        <item name="android:background">#DDDDDD</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    
    <style name="explanation">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <style name="ListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">?android:textAppearanceListItem</item>
    </style>

    <style name="CardViewGridStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="CardViewGridTitle">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="CardViewGridSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CardViewGridInnerLayout">
        <item name="android:padding">8dp</item>
    </style>

    <style name="CardViewListStyle">
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="CardViewListImage">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CardViewListTitle">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="CardViewListSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CardViewListSubtitle.Italic">
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CurrentSongTitle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
</resources>
